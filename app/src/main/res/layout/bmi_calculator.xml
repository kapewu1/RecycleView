<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".FitCalculators.BMI_Calculator">



    <TextView
        android:id="@+id/bmi_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI : 0"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/textDisplayColor"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/textDisplayColor"
        android:ems="10"
        android:inputType="number"
        android:hint="Wzrost (w cm)"/>


    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/textDisplayColor"
        android:ems="10"
        android:inputType="number"
        android:hint="Waga (w kg)"/>



    <Button
        android:id="@+id/summitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/calc_button"
        android:textColor="@drawable/text_on_pressed"
        android:text="Oblicz"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/comparmentsView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="35dp"
            android:gravity="center_horizontal" />
    </RelativeLayout>

</LinearLayout>