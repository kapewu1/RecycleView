<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".BodyFat_Result">


    <TextView
        android:id="@+id/bf_navy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body fat (Navy) : 0"
        android:textSize="35dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:id="@+id/bf_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body fat (BMI) : 0"
        android:textSize="35dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/fat_mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat mass : 0"
        android:textSize="25dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/lean_mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lean mass : 0"
        android:textSize="25dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="60dp"
        />

</LinearLayout>